@model CategoryViewModel
@{
    ViewData["Title"] = "Category List";
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th colspan="2"><h3>Category List</h3></th>
            <th class="text-end"><a class="btn btn-success " asp-action="Add">Add</a></th>

        </tr>
    </thead>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Categories.Any())
        {
            <tr>
                <td colspan="3"><div class="alert alert-warning">There is no Category in here.</div></td>
            </tr>

        }
        else
        {
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>                    
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>